= render partial: "critique", collection: @critiques

#critique_reply_form_wrapper
  = form_tag(critique_component_reply_path, remote: true, id: "critique_reply_form") do
    = text_area_tag("reply", nil, {id: "txtReplyContent"})
    = hidden_field_tag("id", nil, {id: "hidComponentID"})
    = submit_tag(t("audio_visual.show.comments.add"), {id: "btnAddReply", class: "button small green"})
    = render "shared/link_separator"
    = link_to t("links.cancel"), "#", {class: "cancel_reply_link", id: "critique_reply_cancel"}
    = image_tag("spinner.gif", class: "spinner", id: "critique_reply_spinner", alt: "loading", width: "24", height: "24")
    .errors
