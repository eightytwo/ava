.comment_wrapper
  .comment_title
    .right
      #{time_ago_in_words(comment.updated_at)} ago
      - if comment.user.id == current_user.id
        = render "shared/link_separator"
        = link_to t("links.edit"), "#", {id: comment.id, class: "comment_edit_link"}
      - elsif audio_visual.user.id == current_user.id
        = render "shared/link_separator"
        = link_to t("links.reply"), "#", {id: comment.id, class: "comment_reply_link"}

    %h4= comment.user.organisation_display_name

  .comment_content
    %pre= comment.content

    - if !comment.reply.nil?
      .comment_reply_wrapper
        .comment_reply_title
          .right
            #{time_ago_in_words(comment.reply_updated_at)} ago
            - if audio_visual.user_id == current_user.id
              = render "shared/link_separator"
              = link_to t("links.edit"), "#", {id: comment.id, class: "comment_edit_reply_link"}
          %span #{audio_visual.user.organisation_display_name}
          replied
        
        .comment_reply_content
          %pre= comment.reply
