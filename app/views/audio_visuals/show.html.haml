- javascript params[:controller]

#container
  #title
    - if @owner
      .right= link_to(t("links.edit"), edit_audio_visual_path(@audio_visual), {class: "regular"})
    %h3
      - if !@audio_visual.round.nil?
        = link_to @audio_visual.round.name, @audio_visual.round
        .arrow_right
      = @audio_visual.title
      %span.regular by
      = @audio_visual.user.organisation_display_name

  #content
    #avwrapper
      #av_summary
        %h4= t("audio_visual.show.summary.title")
        %dl
          %dt= t("audio_visual.show.summary.headings.description")
          %dd= @audio_visual.description
          %dt= t("audio_visual.show.summary.headings.music")
          %dd= @audio_visual.music
          %dt= t("audio_visual.show.summary.headings.location")
          %dd= @audio_visual.location
          %dt= t("audio_visual.show.summary.headings.production_notes")
          %dd= @audio_visual.production_notes

      #av_player
        %iframe
        / {src: "http://player.vimeo.com/video/43096888?title=0&amp;byline=0&amp;portrait=0", width: "600", height: "338", frameborder: "0", webkitAllowFullScreen: true, mozallowfullscreen: true, allowFullScreen: true}

    - if !@show_critiques and !@show_comments
      .clear
    - else
      #av_feedback
        #tabs
          %ul
            - if @show_critiques
              %li{id: "av_tab_critique"}= t("audio_visual.show.tabs.critique")
            - if @show_comments
              %li{id: "av_tab_comment"}= t("audio_visual.show.tabs.comment")
        #tab_base
        - if @show_critiques
          #av_critiques_wrapper
            - if @can_critique
              = link_to t("links.add_critique"), new_critique_path(avid: @audio_visual.id)
            #av_critiques{data: {load: critiques_audio_visual_path(@audio_visual, format: :html), format: "html"}}
            .component_reply_form_wrapper
              = form_tag(critique_component_reply_path, remote: true, id: "critique_reply_form") do
                = render partial: "reply_form"
        - if @show_comments
          #av_comments_wrapper
            #av_comments{data: {load: comments_path(avid: @audio_visual, format: :js), format: "js"}}
            - if @can_comment
              .component_reply_form_wrapper
                = form_tag(comment_reply_path, remote: true, id: "comment_reply_form") do
                  = render partial: "reply_form"

              #add_comment_form_wrapper
