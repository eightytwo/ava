#container.half_width
  #title
    %h3
      = t("audio_visual_category.index.title")
      = link_to(organisation.name, organisation)

  #content
    %table.single{cellspacing: "0"}
      %tr
        %th= t("audio_visual_category.index.category_name")
        %th.text_right= link_to t("links.new"), new_audio_visual_category_path(oid: organisation)

      - if categories.count > 0
        - categories.each do |c|
          %tr{class: cycle("odd", "even")}
            %td= c.name
            %td.admin_column
              = link_to t("links.edit"), edit_audio_visual_category_path(c)
              = render "shared/link_separator"
              = link_to t("links.delete"), c, confirm: t("audio_visual_category.delete.confirm"), method: :delete
      - else
        %tr
          %td{colspan: "2"}= t("audio_visual_category.index.no_categories")

    %br
    %br

    = link_to t("links.back"), organisation
