<%= form_for(@round) do |f| %>
  <%= hidden_field_tag 'round[folio_id]', @folio.id %>

  <div class="field_wrapper">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field_wrapper">
    <%= f.label :start_date %>
    <br />
    <%= f.date_select :start_date %>
  </div>

  <div class="field_wrapper">
    <%= f.label :end_date %>
    <br />
    <%= f.date_select :end_date %>
  </div>

  <div class="field_wrapper">
    <%= f.submit %>
  </div>
<% end %>
