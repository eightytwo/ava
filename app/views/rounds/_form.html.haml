- if round.errors.any?
  #error_explanation
    %h3= t("form.error_title", count: round.errors.count)

    %ul
      - round.errors.full_messages.each do |msg|
        %li= msg

.form_content
  = form_for(round) do |f|
    = f.hidden_field :folio_id

    .field_wrapper
      = f.label :name
      = f.text_field :name, autofocus: true

    .field_wrapper
      = f.label :start_date
      = f.date_select :start_date

    .field_wrapper
      = f.label :end_date
      = f.date_select :end_date

    .field_wrapper
      = f.submit({class: "button green"})

  .links_wrapper
    = link_to t("links.back"), folio
