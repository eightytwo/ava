.form_wrapper
  %h3= t("forgot_password.title")

  = devise_error_messages!

  .form_content
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|    
      .field_wrapper
        = f.label :login
        = f.text_field :login

      .field_wrapper
        = f.submit(t("forgot_password.submit"), {class: "button small green"})

    .links_wrapper
      = render partial: "devise/shared/links"
