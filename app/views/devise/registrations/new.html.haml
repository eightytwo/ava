%div.form_wrapper
  %h3 Register

  = devise_error_messages!

  %div.form_content
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      
      %div.field_wrapper
        = f.label :username
        = f.text_field :username

      %div.field_wrapper
        = f.label :email
        = f.email_field :email

      %div.field_wrapper
        = f.label :password
        = f.password_field :password

      %div.field_wrapper
        = f.label :password_confirmation
        = f.password_field :password_confirmation

      %div.field_wrapper
        = f.submit("Register", class: "button small green")

    %div.links_wrapper
      = render partial: "devise/shared/links"
