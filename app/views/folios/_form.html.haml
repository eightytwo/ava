- if @folio.errors.any?
  #error_explanation
    %h2= t("form_error.title", :count => @folio.errors.count)

    %ul
    - @folio.errors.full_messages.each do |msg|
      %li= msg

.form_content
  = form_for(@folio) do |f|
    = hidden_field_tag 'folio[organisation_id]', @organisation.id
    
    .field_wrapper
      = f.label :name
      = f.text_field :name

    .field_wrapper
      = f.label :description
      = f.text_field :description

    .field_wrapper
      = f.submit({class: "button small green"})

  .links_wrapper
    = link_to 'Back', @organisation
