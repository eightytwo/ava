- if @folio.errors.any?
  #error_explanation
    %h2= t("form.error_title", count: @folio.errors.count)

    %ul
    - @folio.errors.full_messages.each do |msg|
      %li= msg

.form_content
  = form_for(@folio) do |f|
    = f.hidden_field :organisation_id
    
    .field_wrapper
      = f.label :name
      = f.text_field :name, autofocus: true

    .field_wrapper
      = f.label :description
      = f.text_field :description

    .field_wrapper
      = f.submit({class: "button small green"})

  .links_wrapper
    = link_to 'Back', @organisation
